<?xml version="1.0" encoding="UTF-8"?>
<project-modules id="moduleCoreId" project-version="1.5.0">
    <wb-module deploy-name="BankingSystem">
        <!-- Mapping the output directory of Maven build -->
        <wb-resource deploy-path="/" source-path="/target/m2e-wtp/web-resources"/>
        
        <!-- Mapping the main web application directory -->
        <wb-resource deploy-path="/" source-path="/src/main/webapp" tag="defaultRootSource"/>
        
        <!-- Mapping the resource directory for deployment -->
        <wb-resource deploy-path="/WEB-INF/classes" source-path="/src/main/resources"/>
        
        <!-- Mapping the Java source directory for deployment -->
        <wb-resource deploy-path="/WEB-INF/classes" source-path="/src/main/java"/>
        
        <!-- Specifying the output path for compiled Java classes -->
        <property name="java-output-path" value="/BankingSystem/target/classes"/>
        
        <!-- Setting the context root for the application -->
        <property name="context-root" value="BankingSystem"/>
    </wb-module>
</project-modules>
